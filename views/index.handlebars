<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{! restaurants list }}
<a
  class="rounded m-3 p-2 bg-success text-white fs-5 text-decoration-none"
  href="/restaurants/new"
>Create Restaurant</a>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="column">

            <a href="/restaurants/{{this.id}}" class="text-secondary">
              <div class="card mb-1">
                <img
                  class="card-img-top"
                  src="{{this.image}}"
                  style="height: 200px"
                />
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">Restaurant Name:
                    {{this.name}}</h6>

                  {{!-- <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>

                <span>
                  <i class="fas fa-star fa-xs"></i>
                  {{this.rating}}
                </span> --}}

                </div>
              </div>

            </a>
            <div
              class="d-flex p-2 mb-2 bd-highlight align-items-end justify-content-end"
            >
              <a class="m-1" href="/restaurants/{{this._id}}">Detail</a>
              <a class="m-1" href="/restaurants/{{this._id}}/edit">Edit</a>
              <form
                class="m-1"
                action="/restaurants/{{this._id}}?_method=DELETE"
                method="post"
              >
                <button type="submit">Delete</button>
              </form>
            </div>

          </div>

        {{/each}}

      </div>
    </div>

  </div>
</div>